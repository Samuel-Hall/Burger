<div class='container text-center jumbotron bg-warning'>
<h1>Eat the burgers!</h1>
<div class="row">
<div class="col-md-6">
<h2>Burgers on the menu:</h2>

<ul id="menuBurgers" class="text-left list-group">
  {{#each burgers}}
    {{#unless devoured}}
      <li class="devour list-group-item bg-success" id="{{this.id}}"><strong>{{this.burger_name}}</strong> </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-md-6">
<h2>Devoured burgers:</h2>

<ul class="text-left list-group">
  {{#each burgers}}
    {{#if devoured}}
      <li class="list-group-item bg-danger"><strong>{{this.burger_name}}</strong></li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="col-md-4 offset-md-4">
<h2>Create a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" class="form-control" id="burgerName" name="name">
  </div>

  <button id="addBurger" class="btn btn-primary" type="submit">Add burger</button>
</form>
</div>
</div>