<h1>Eat the burgers!</h1>

<h2>Burgers on the menu:</h2>

<ul id="menuBurgers">
  {{#each burgers}}
    {{#unless devoured}}
      <li class="devour" id="{{this.id}}">{{this.burger_name}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured burgers:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Create a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burgerName" name="name">
  </div>

  <button id="addBurger" type="submit">Add burger</button>
</form>